{

  "manifest_version": 2,
  "name": "SpotWeb filter",
  "version": "1.2",

  "description": "Seek out the 1080p version of a post",

  "icons": {
    "48": "icons/icon-filter.png"
  },

  "permissions": [
    "*://www.nzbserver.com/*",
    "activeTab",
    "tabs"
  ],

  "browser_action": {
    "default_icon": "icons/filter-active.png"
  },

 "background": {
    "scripts": ["background.js"]
  }

}
